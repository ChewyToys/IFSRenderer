<UserControl x:Class="WpfDisplay.Views.Animation.DopeButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDisplay.Views"
             xmlns:conv="clr-namespace:WpfDisplay.Converters"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="15" d:DesignWidth="15" Width="15" Height="15">
    <Button
        Style="{DynamicResource MaterialDesignFlatDarkBgButton}" 
        Height="10"
        Width="10" PreviewMouseDown="OnMouseDown" PreviewMouseMove="OnMouseMove" PreviewMouseUp="OnMouseUp">
        <Button.RenderTransform>
            <TransformGroup>
                <RotateTransform CenterX="5" CenterY="5" Angle="45"/>
                <TranslateTransform X="-5"/>
            </TransformGroup>
        </Button.RenderTransform>
    </Button>
</UserControl>
