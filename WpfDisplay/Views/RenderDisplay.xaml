<WindowsFormsHost x:Class="WpfDisplay.Views.RenderDisplay"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDisplay"
             xmlns:tk="clr-namespace:OpenTK.WinForms;assembly=OpenTK.WinForms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:vm="clr-namespace:WpfDisplay.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:InteractiveDisplayViewModel, IsDesignTimeCreatable=False}">
    <tk:GLControl x:Name="display1"
                  MouseMove="Display1_MouseMove"
                  MouseWheel="Display1_MouseWheel"/>
</WindowsFormsHost>
